{
  "compilerOptions": {
    "target": "ES2023",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "src",
    "outDir": "lib",
    "declaration": true,
    "declarationDir": "@types",
    "noEmitHelpers": true,
    "importHelpers": true,
    "noUnusedLocals": true,
    "alwaysStrict": true,
    "baseUrl": "./src/",
    "paths": {
      "4u7o-logger": [
        "./index"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "@types",
    "lib",
    "./*.ts"
  ]
}
